<link rel="stylesheet" href="/stylesheets/view-all-forms.css" />

<div class="main-container">
  <div class="title">
    <h1>FIR List</h1>
    <a href="/admin/add-new-FIR" class="btn">Add New FIR</a>
  </div>
  <div class="sub-contents">
    <table id="formsTable">
      <thead>
        <tr>
          <th>Id</th>
          <th>OFFENCES TYPE</th>
          <th>STATUS</th>
          <th>FIR TYPE</th>
          <th>YEAR MONTH</th>
          <th>Action</th> 
        </tr>
      </thead>
      <tbody>
        {{#each QuestionsList}}
          <tr>
            <td>{{_id}}</td>
            <td>{{subject}}</td>
            <td>{{semester}}</td>
            <td>{{department}}</td>
            <td>{{year_month}} </td>
            <td><a
                href="/admin/edit-questionpaper/{{_id}}"
                class="edit-btn"
              >Edit</a>&nbsp;<a
                href="/admin/delete-questionpaper/{{_id}}"
                class="delete-btn"
                onclick="return confirm('Are you sure you want to delete this Question Paper?');"
              >Delete</a></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
<script>
  $( function () { $('#formsTable').DataTable(); } );
</script>